<div class="container-cent">
	<h1 class="colf main-title">TDD Project</h1>
</div>
<% if logged_in? %>
<h4 class="main-title">Bienvenue <strong><%= current_user.firstname %>. </strong>Connecté en tant que  <strong><%= current_user.email %>.</strong>
<%= link_to "Déconnexion", logout_path, method: :delete, class: "btn btn-primary" %></h4> <br>
<%= link_to "Voir le Club", club_path, class: "btn btn-primary" %></h4>
<% else %>
<h4 class="main-title"><i class="em em-arrow_double_down"></i> Pour utiliser TDD Project vous devez vous <strong>Connectez</strong> ou bien vous <strong>Inscrire</strong> <i class="em em-arrow_double_down"></i><h4>
	<%=  link_to "Inscription", signup_path , class: "btn btn-success", id: "ins" %>  
	<%=  link_to "Connexion", login_path , class: "btn btn-success ", id: "con" %> 
<% end %>

