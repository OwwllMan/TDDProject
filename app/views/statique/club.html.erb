<% if logged_in? %>
<h4 class="main-title">Bienvenue <strong><%= current_user.firstname %>. </strong>Connecté en tant que  <strong><%= current_user.email %></strong>
<%= link_to "Déconnexion", logout_path, method: :delete, class: "btn btn-primary" %></h4>
<h1>Voilà tout les membres du club : </h1>
<% User.all.each do |user| %>
    <div class="card">
      <div class="card-body">
        <h4>Utilisateur n°<%= user.id%></h4>
        <h4>Nom <strong> <%= user.firstname%> </h4> </strong>
        <h4>Prénom <strong> <%= user.lastname%> </h4> </strong>
      </div>
    </div>
  <% end %>
<% else %>
<div class="container-cent">
	<h1 class="main-title">TDD Project</h1>
</div>
<h4 class="main-title"><i class="em em-arrow_double_down"></i> Pour accéder au Club vous devez vous <strong>Connectez</strong> ou bien vous <strong>Inscrire</strong> <i class="em em-arrow_double_down"></i><h4>
	<%=  link_to "Inscription", signup_path , class: "btn btn-success", id: "ins" %>  
	<%=  link_to "Connexion", login_path , class: "btn btn-success ", id: "con" %> 
<% end %>















